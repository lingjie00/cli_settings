#!/bin/bash

# this script will remove the current config files
# useful for re-installing all the config files

files=(
    ".vimrc" ".zshrc" ".tmux.conf" ".gitconfig"
    ".config/nvim/init.vim"
    ".config/nvim/plugin.vim"
    ".config/nvim/keymap.vim"
    ".config/nvim/lua/lualine_theme.lua"
    ".config/nvim/lua/config.lua"
    ".config/fish/config.fish"
    ".config/fish/fish_plugins"
    ".config/fish/fish_variables"
    ".config/fish/functions/fish_prompt.fish"
    ".config/fish/functions/fish_right_prompt.fish"
    );

for file in ${files[@]}
    do
        [ -f ~/$file ] && { echo "deleting $file"; rm ~/$file; }
done

# macos specific config files
files=("skhd/skhdrc" "yabai/yabairc" "limelight/limelightrc")
if [[ "$OSTYPE" == "darwin"* ]]; then
    for file in ${files[@]}
    do
        [ -f ~/.config/$file ] && { echo "deleting $file"; rm ~/.config/$file; }
    done
fi

files=("nb_clean" "tmux_setup")
for file in ${files[@]}
do
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        [ -f /usr/local/bin/$file ] && { echo "deleting $file"; sudo rm /usr/local/bin/$file; }
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        [ -f /usr/local/bin/$file ] && { echo "deleting $file"; rm /usr/local/bin/$file; }
    fi
done
